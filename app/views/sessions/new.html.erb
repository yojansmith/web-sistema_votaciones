<div class="auth-wrapper">
  <div class="auth-card">
    <h1 class="auth-title">Iniciar Sesión</h1>
    <p class="auth-subtitle">Ingresa tus credenciales para votar</p>

    <%= form_with url: login_path, scope: :session, local: true, class: "auth-form" do |f| %>
      
      <div class="form-group">
        <%= f.label :cedula, "Número de Cédula", class: "form-label" %>
        <%= f.text_field :cedula,
            required: true,
            class: "form-input",
            placeholder: "Ej: 1234567890",
            autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password,
            required: true,
            class: "form-input",
            placeholder: "Ingresa tu contraseña" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Iniciar Sesión", class: "btn btn--primary btn-lg" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>¿No tienes cuenta? <%= link_to "Regístrate aquí", new_user_path, class: "auth-link" %></p>
    </div>
  </div>
</div>