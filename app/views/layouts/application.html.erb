<!DOCTYPE html>
<html>
  <head>
    <title>Sistema de Votaciones</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
  </head>

  <body>
     
    
    <div class="top-bar">
  <div class="container top-bar-content">
    <img src="/assets/colombia.png" alt="Bandera de Colombia" class="flag-colombia">
    <p class="top-bar-text">Sistema nacional de votaciones</p>
  </div>
</div>

    <!-- Navegaci√≥n -->
    <nav class="navbar">
      <div class="navbar-container">
        <ul class="navbar-menu">
          <li class="navbar-item">
            <%= link_to "Inicio", root_path, class: "navbar-link" %>
          </li>

          <% if current_user %>
            <li class="navbar-item">
              <%= link_to "Votar", new_voto_path, class: "navbar-link" %>
            </li>
            <li class="navbar-item">
              <%= link_to "Resultados", resultados_path, class: "navbar-link" %>
            </li>

            <% if admin? %>
              <li class="navbar-item">
                <%= link_to "Administrar candidatos", new_candidato_path, class: "navbar-link" %>
              </li>
            <% end %>
          <% end %>
        </ul>
        
        <% if current_user %>
          <div class="navbar-user">
            <span class="user-icon">üë§</span>
            <span class="user-name"><%= current_user.nombre %></span>
            <%= link_to "Salir", logout_path, method: :get, class: "navbar-link navbar-link--logout" %>
            <%= button_to "Eliminar Cuenta", 
                user_path(current_user), 
                method: :delete,
                class: "navbar-link navbar-link--danger",
                form: { style: "display: inline;" },
                data: { turbo_confirm: "¬øEst√°s seguro de que quieres eliminar tu cuenta? Esta acci√≥n no se puede deshacer y perder√°s todos tus votos." } %>
          </div>
        <% else %>
          <div class="navbar-user">
            <%= link_to "Iniciar Sesi√≥n", login_path, class: "navbar-link navbar-link--login" %>
            <%= link_to "Registrarse", new_user_path, class: "navbar-link navbar-link--register" %>
          </div>
        <% end %>
      </div>
    </nav>

    <div class="notifications">
      <% if notice %>
        <div class="notification notification--success">
          <p class="notification-text"><%= notice %></p>
        </div>
      <% end %>

      <% if alert %>
        <div class="notification notification--error">
          <p class="notification-text"><%= alert %></p>
        </div>
      <% end %>
    </div>

    <main class="main-content">
      <div class="container">
        <%= yield %>
      </div>
    </main>
    
    <footer class="footer">
      <p>¬© 2026 ‚Ä¢ Sistema de Votaciones</p>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Script para auto-ocultar notificaciones -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Seleccionar todas las notificaciones
        const notifications = document.querySelectorAll('.notification');
        
        notifications.forEach(function(notification) {
          // Agregar animaci√≥n de entrada
          notification.style.opacity = '0';
          notification.style.transform = 'translateY(-20px)';
          notification.style.transition = 'all 0.3s ease-in-out';
          
          // Mostrar con animaci√≥n
          setTimeout(function() {
            notification.style.opacity = '1';
            notification.style.transform = 'translateY(0)';
          }, 100);
          
          // Ocultar despu√©s de 2 segundos
          setTimeout(function() {
            notification.style.opacity = '0';
            notification.style.transform = 'translateY(-20px)';
            
            // Eliminar del DOM despu√©s de la animaci√≥n
            setTimeout(function() {
              notification.remove();
            }, 300);
          }, 2000);
        });
      });
    </script>
  </body>
</html>